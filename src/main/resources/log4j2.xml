<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="filename">target/log_file.log</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %C{1} %L %msg%n"/>
        </Console>
        <File name="File" fileName="log_file.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %C{1} %L %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="com.module4.loggingtask.Main" level="trace">
            <AppenderRef ref="File"/>
        </Logger>
        <Logger name="com.module4.loggingtask.Logic" level="trace">
            <AppenderRef ref="File"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>